{
  "name": "@levischuck/render-html",
  "type": "module",
  "files": [
    "dist",
		"LICENSE.txt",
		"README.md"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
	"types": "./dist/index.d.ts",
  "exports": {
		"./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./client-wasm": {
      "types": "./dist/client-wasm.d.ts",
      "import": "./dist/client-wasm.js",
      "default": "./dist/client-wasm.js"
    },
		"./worker-wasm": {
			"types": "./dist/worker-wasm.d.ts",
			"import": "./dist/worker-wasm.js",
			"default": "./dist/worker-wasm.js"
		},
		"./bun-wasm": {
			"types": "./dist/bun-wasm.d.ts",
			"import": "./dist/bun-wasm.js",
			"default": "./dist/bun-wasm.js"
		}
  },
  "version": "0.0.1",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260111.0",
    "@types/bun": "^1.3.5",
    "@types/node": "^20.19.0",
    "esbuild": "^0.25.12",
    "esbuild-plugin-d.ts": "^1.3.1",
    "typescript": "^5.8.3"
  },
  "private": false,
  "scripts": {
    "build": "bun scripts/esbuild.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@levischuck/tiny-html": "^0.1.1",
    "@resvg/resvg-wasm": "2.6.2",
    "satori": "^0.15.2",
    "yoga-wasm-web": "0.3.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
		"access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LeviSchuck/render-html.git"
  },
	"keywords": [
		"html",
		"image",
		"satori",
		"svg",
		"render",
		"png",
		"cloudflare",
		"workers"
	]
}
